generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Game {
    id     String @id @default(uuid())
    title  String
    banner String
    ads    Ad[]
}

model Ad {
    id           String   @id @default(uuid())
    gameId       String
    name         String
    yarsPlaying  Int
    discord      String
    weekDays     String
    hourStar     Int
    hourEnd      Int
    useVoiceChat Boolean
    createdAt    DateTime @default(now())

    game Game @relation(fields: [gameId], references: [id])
}
